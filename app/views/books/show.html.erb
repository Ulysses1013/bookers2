<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
        <table class="table">
            <tbody>
              <tr><%= image_tag @book.user.get_profile_image('63x63') %></tr>
              <tr>
                <th>name</th>
                <th><%= @book.user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @book.user.introduction %></th>
              </tr>
            </tbody>
        </table>

        <div class="row">
          <%= link_to edit_user_path(@book.user_id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>


      <h2>New book</h2>
        <%= form_with model: @new_book, local:true do |f| %>
              <div class="form-group">
                <label for="book_title">Title</label>
                <%= f.text_field :title , class: 'form-control book_title' %>
              </div>

              <div class="form-group">
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :body , class: 'form-control book_body' %>
              </div>

              <div class="form-group">
                <%= f.submit 'Create Book' , class: "btn btn-success"%>
              </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image("40x40") %>
                <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :delete , class: 'push' do %>
                    <i class="fas fa-heart"></i>
                    <%= @book.favorites.count %>
                  <% end %>
                </p>

              <% else %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    <i class="fas fa-heart"></i>
                    <%= @book.favorites.count %>
                  <% end %>
                </p>

              <% end %>
            </td>
            <td>コメント数：<%= @book.book_comments.count %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <% @book.book_comments.each do |book_comment| %>

        <div class="d-flex align-items-center mb-1">
          <%= link_to user_path(book_comment.user_id) do %>
            <%= image_tag book_comment.user.get_profile_image("36x36") %>
            <br>
            <%= book_comment.user.name %>
          <% end %>

          <%= book_comment.comment %>

          <% if book_comment.user == current_user %>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger ml-1" %>
          <% end %>
        </div>

      <% end %>

      <%= form_with model: [@book, @book_comment], local: true do |f| %>

        <div class="form-group">
          <%= f.text_area :comment, rows: '4' , class: 'form-control border border-dark' %>
        </div>

        <div><%= f.submit "送信" %></div>

      <% end %>

      </div>
    </div>
  </div>
</div>

